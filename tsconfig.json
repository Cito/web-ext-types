{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["DOM", "ES5", "ES2015.Promise"],
    "target": "es5",
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}
